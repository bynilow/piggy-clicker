{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES6"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false, // Измените на false
        "jsx": "react-jsx",
        "module": "ESNext",
        "outDir": "./dist/",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@app/*": [
                "./app/*"
            ],
            "@pages/*": [
                "./pages/*"
            ],
            "@widgets/*": [
                "./widgets/*"
            ],
            "@features/*": [
                "./features/*"
            ],
            "@entities/*": [
                "./entities/*"
            ],
            "@shared/*": [
                "./shared/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}